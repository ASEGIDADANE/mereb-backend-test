    "firebase-functions": "^5.0.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "busboy": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@types/multer": "^1.4.7",
    "@types/busboy": "^1.5.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}